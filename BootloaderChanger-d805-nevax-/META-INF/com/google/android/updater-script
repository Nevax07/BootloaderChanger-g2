		ui_print(" >> Reboot system in 5 seconds...");
		ui_print(" 5");
				run_program("/sbin/busybox", "sleep", "1");
		ui_print(" 4");
				run_program("/sbin/busybox", "sleep", "1");
		ui_print(" 3");
				run_program("/sbin/busybox", "sleep", "1");
		ui_print(" 2");
				run_program("/sbin/busybox", "sleep", "1");
		ui_print(" 1");
				run_program("/sbin/busybox", "sleep", "1");

		package_extract_file("nevax/system.sh", "/tmp/system.sh");
		set_perm_recursive(0, 0, 0755, 0755, "/tmp/system.sh");
		run_program("/tmp/system.sh");
		delete("/tmp/system.sh");

endif;
