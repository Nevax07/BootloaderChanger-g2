if
	file_getprop("/tmp/aroma/rcvr.prop", "item.1.1") == "1"
then
	ui_print("   Installing New !Bumped! Recovery");
	ui_print("   Recovery by blastagator");
	package_extract_dir("nevax/TWRP/tmp", "/tmp");
	set_progress(0.80);
	package_extract_file("nevax/TWRP/recovery.img", "/tmp/panelfix/recovery.img");
	set_perm(0, 0, 0755, "/tmp/panelfix.sh");
	set_perm_recursive(0, 0, 0755, 0755, "/tmp/panelfix");
	set_progress(0.85);
	assert(run_program("/tmp/panelfix.sh") == 0);
	set_progress(0.97);
	delete("/tmp/panelfix.sh");
endif;

ui_print(" ");
set_progress(1.0);
ui_print("@Finished");
ui_print(" ");

if
	(file_getprop("/tmp/aroma/bootloader.prop", "selected.3")=="1")
then
		ui_print(" ");
		ui_print(" ");
		ui_print(" >> Reboot recovery in 5 seconds...");
		ui_print(" 5");
				run_program("/sbin/busybox", "sleep", "1");
		ui_print(" 4");
				run_program("/sbin/busybox", "sleep", "1");
		ui_print(" 3");
				run_program("/sbin/busybox", "sleep", "1");
		ui_print(" 2");
				run_program("/sbin/busybox", "sleep", "1");
		ui_print(" 1");
				run_program("/sbin/busybox", "sleep", "1");

		package_extract_file("nevax/recovery.sh", "/tmp/recovery.sh");
		set_perm_recursive(0, 0, 0755, 0755, "/tmp/recovery.sh");
		run_program("/tmp/recovery.sh");
		delete("/tmp/recovery.sh");

endif;

if
	(file_getprop("/tmp/aroma/bootloader.prop", "selected.3")=="2")
then
